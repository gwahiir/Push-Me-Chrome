{
    "manifest_version": 2,

    "name": "Push It",
    "description": "This extension sends and receives text between Chrome and a connected Android phone",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Click here"
    },
    
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "http://localhost:5000/receive",
        "https://floating-island-50698.herokuapp.com/",
        "gcm",
        "storage",
        "notifications"
    ]
}